<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="24dp"
    android:gravity="center_vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="45dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imgDeveloper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/developer_photo"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developed By"
            android:textSize="14sp"
            android:textAllCaps="true"
            android:textColor="#666666" 
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/txtDevName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vivek Pandita\nS/o Mohan Krishan Pandita"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" 
            android:lineSpacingExtra="2dp"/>

		<TextView
            android:id="@+id/txtDedication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Dedicated to all the Dads for a hassle-free Herath Puja."
            android:textSize="15sp"
            android:textColor="?android:attr/textColorSecondary"
            android:textStyle="italic"/>
			
       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="v1.0"
            android:textSize="12sp"
            android:textColor="#888888"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/linkPortfolio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Portfolio"
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="24dp"/>

            <TextView
                android:id="@+id/linkLinkedIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LinkedIn"
                android:textColor="#0A66C2" 
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>
			
			

    </LinearLayout>
</LinearLayout>